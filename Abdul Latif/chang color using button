<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
<link rel="stylesheet" href="style.css">

<style>



</style>

</head>
<body> 

    <h1>This is Color Changer</h1>
    


    <input type="text" id="input" />
    <button id="btn">click</button> <br></br>

    <p id="paragraph">
    This is the section
    </p>

</body>
<script type=text/script> 

let myPara = document.getElementById('paragraph');
let button = document.getElementById('btn');
let colorInput = document.getElementById('input')

button.addEventListener('click', () =>{
    myPara.style.backgroundColor = colorInput.value;
    myPara.textContent=colorInput.value;
})

</script>

</script>
