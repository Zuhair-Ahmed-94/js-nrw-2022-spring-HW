<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <link rel="stylesheet" href="style.css">
       
        <title>DOM Manipulation</title>
    </head>
    <style media="screen">
    .bold { font-weight: bold}
    .red-bg {background: red}
    .green-text { color: green}
    .big-font { font-size: 36px}
    
        
    
    
    
    
    </style>
    
    
    
    <body>
    
    <h2 id="title">Class List</h2>
    <p id ="myPara">we are gonna change classes</p>
    
    
    </body>
    
    
   <script type="text/javascript">
    const myPara = document.getElementById("myPara");
    
    myPara.classList.add("bold","red-bg", "big-font");
    myPara.classList.remove("bold")
    myPara.classList.replace("big-font","green-text")

    console.log(myPara.classList);
    
    
    </script>
    </html> 
